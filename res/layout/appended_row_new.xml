<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:orientation="horizontal"
	android:id="@+id/linearLayout1"
	android:layout_height="wrap_content"
	android:weightSum="10">
	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:id="@+id/linearLayout2"
		android:layout_weight="4"
		android:orientation="vertical">
		<TextView
			android:id="@+id/tv_id_username"
			android:text=""
			android:gravity="right"
			android:textColor="@color/text_orandge"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"></TextView>
		<TextView
			android:text=""
			android:id="@+id/tv_id_likeCount"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"></TextView>

		<Button
		    android:id="@+id/btn_like_appended"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:background="@drawable/like_image"
		    android:text="" >
</Button>
	</RelativeLayout>
	<TextView
		android:id="@+id/tv_id_text"
		android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:textColor="@color/text_dark_green"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_weight="6"></TextView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/back"
    
    >

    <EditText
        android:id="@+id/et_contribution_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.23" >

        <requestFocus />
    </EditText>

    <CheckBox
        android:id="@+id/cb_is_this_end "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cb_suggest_end"
        android:textColor="@color/text_dark_green" />

    <Button
        android:id="@+id/btn_submit_suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_text_submit_contribution" 
        android:background="@drawable/button_shape" 
        android:layout_marginBottom="5dip"
        />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_id_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" 
        android:gravity="right"
		android:textColor="@color/text_orandge"
        />

    <TextView
        android:id="@+id/tv_id_likeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/likeCount"
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:gravity="right"

        />

    <TextView
        android:id="@+id/tv_isSuggestedEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" 
        android:textColor="@color/text_light_orange"
        />

    <TextView
        android:id="@+id/tv_id_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text"
        android:gravity="right"
        android:textColor="@color/text_dark_green"/>

    <Button
        android:id="@+id/btn_like_unappended"
        android:layout_width="60dp"
        android:layout_height="47dp"
        android:background="@drawable/like_image"
        android:text="" 
        android:focusable="false"
		android:focusableInTouchMode="false"
/>

</LinearLayout>